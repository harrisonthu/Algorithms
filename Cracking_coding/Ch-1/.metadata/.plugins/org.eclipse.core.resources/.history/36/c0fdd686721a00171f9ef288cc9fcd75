
/**
 * @author han
 * 
 * Date: April 3, 2017
 *
 */
public class a3q3p1 {

	/**
	 * @param nums
	 * @return
	 */
	public static boolean validArray(int[] nums) {
		int prev = 0;
		int steps = 0;
		int max_furthest = -1;
		int max_delta = 0;
		int delta;

		for (int i = 1; i < nums.length; i++) {
			if (i > nums[prev] + prev) {
				if (max_furthest == -1) {
					return false;
				} else {
					prev = max_furthest;
					max_furthest = -1;
					steps++;
					max_delta = 0;
				}
			}
			delta = i - prev + nums[i];
			if (delta > max_delta) {
				max_delta = delta;
				max_furthest = i;
			}
		}
		if (prev + nums[prev] >= nums.length - 1) {
			return true; // no way to reach last element
		} else {
			return false;
		}
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int[] input = { 3, 2, 1, 1, 0 };
		System.out.println(validArray(input));

	}

}

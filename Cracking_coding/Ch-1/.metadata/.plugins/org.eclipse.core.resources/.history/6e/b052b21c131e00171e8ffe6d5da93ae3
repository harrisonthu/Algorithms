//			model.setModelListener(proxy);
//			proxy.setViewListener(model);
		}
	}

	/**
	 * Print a usage message and exit.
	 */
	private static void usage() {
		System.err.println("Usage: java Wordz <host> <port>");
		System.exit(1);
	}

}

	public static void main(String[] args) throws SocketException {
		if (args.length != 6)
			usage();
		String rhost = args[0];
		int rport = Integer.parseInt(args[1]);
		String lhost = args[2];
		int lport = Integer.parseInt(args[3]);
		byte[] key = Hex.toByteArray(args[4]);

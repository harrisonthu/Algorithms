


/**
 * Class CLAThread is the command line arguments into sorting network program. 
 * It is a multithreaded Java program to compute sorting  number specified by the parameters a and b and the argument n, 
 * . The program gets the parameters from the command line.
 *
 * @author  Han Min Thu
 * @version 11-Febrary-2017
 */

public class CLAThread implements Runnable {
	String[] args;
	Monitor mymonitor;
	
	public CLAThread(String[] args, Monitor mymonitor){
		this.args = args;
		this.mymonitor = mymonitor;
	}
	
	
	@Override
	public void run(){
		mymonitor.putValue(0, Integer.parseInt(args[0]));
		mymonitor.putValue(0, Integer.parseInt(args[1]));
		mymonitor.putValue(0, Integer.parseInt(args[2]));
		mymonitor.putValue(0, Integer.parseInt(args[3]));
		mymonitor.putValue(0, Integer.parseInt(args[4]));
		mymonitor.putValue(0, Integer.parseInt(args[5]));
		mymonitor.putValue(0, Integer.parseInt(args[6]));
		mymonitor.putValue(0, Integer.parseInt(args[7]));
	}
	
	
	
	

}

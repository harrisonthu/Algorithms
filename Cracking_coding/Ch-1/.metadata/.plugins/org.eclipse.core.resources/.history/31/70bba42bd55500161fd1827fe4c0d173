import java.lang.reflect.Array;
import java.util.ArrayList;

public class Google {
	
	
	public int solution(int[] A) {
		
		 long sum = 0;
	        for(int element:A){
	            sum += element;  // sum =1 total
	            
	        for (int i = 0; i < A.length; i++){
	            if (sum == A[i])
	                return i;
	            sum -= A[i] + A[i];
	            System.out.println("sum: " + sum);
	        	}
	        
	        }
			return 0;


	}
}
